{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "target": "es2022",        
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["ES2022", "DOM"],
        "jsx": "react-jsx",
        "jsxImportSource": "@wordpress/element",
        "types": ["react"],
        
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@wordpress/*": ["types/wp/*"],
            "@wordpress/element/jsx-runtime": ["types/wp/element-jsx-runtime.d.ts"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@config": ["src/config.js"],
            "@filters/*": ["src/filters/*"],
            "@hooks": ["src/hooks"],
            "@hooks/*": ["src/hooks/*"],
            "@panels/*": ["src/panels/*"],
            "@tabs/*": ["src/tabs/*"],
            "@stores/*": ["src/stores/*"],
            "@utils": ["src/utils/index.js"],
            "@utils/*": ["src/utils/*"],
            "@types": ["types/index.d.ts"],
            "@types/*": ["types/*"],
            "@debug": ["src/utils/debug.js"]
        },

        "noEmit": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "node_modules",
        "js",
        "css",
        "config",
        "node",
        "php",
        "svgr.config.cjs",
        "src/css"
    ]
}